<div class="container text-center">
    <h1 class="mt-4 mb-0">Top Rated Restaurants</h1>
    <hr class="mt-3 mb-5">
</div>
<div class="container mb-4">
    <div class="card-deck">
        {{#each data}}
        <a href="/home/{{this.res_branch_id}}">
            <div class="card mb-3" style="min-width: 300px; max-width: 350px">
                {{!-- <img src="../uploads/{{this.rest_img}}" height="350" width="300" class="card-img-top"> --}}
                <img src="{{this.rest_img}}" height="350" width="300"
                    class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{this.resturant_name}} <span
                            class="avgRating"
                            style="float:right; color:#fbb710;">{{this.rating}}</span>
                    </h5>
                    <hr>
                    <p class="card-text"
                        style="max-height: 200px; overflow:auto;">
                        {{this.description}}</p>
        </a>
    </div>
</div>
{{/each}}



























</div>
























</div>