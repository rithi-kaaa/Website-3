<div class="container">
    <div class="row">

        <div class="col-md-4"></div>
        <div class="col-sm-6 col-md-4 bg-light text-dark mt-4">
            <h2 class="text-center login-title">Reset password</h2>
                     
            <div id="client-error">
  <strong></strong>
</div>
      
            {{#if error}}
            <div class="alert alert-danger">
  <strong>{{error}}</strong>
</div>
     {{/if}}      
          
                
                <form class="form-pwd-reset" id="pwd_reset" method="POST" action="/resturant/reset_password">
                <input name="id" type="hidden"  value="{{session}}" class="form-control">
                <input name="current_password" type="password" class="form-control" placeholder="Enter current password" >
                <input name="password" type="password" class="form-control" placeholder="Enter new passord" >
                <input name="password1" type="password" class="form-control" placeholder="Re-enter new passord" >
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Re-set Passord</button>

                </form>
            
        </div>
    </div>
</div>
<script src="../js/pwd_reset.js"></script>
 
